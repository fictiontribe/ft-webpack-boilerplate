{
  "name": "ft-webpack-boilerplate",
  "version": "1.0.0",
  "description": "Fiction Tribe's landing page boilerplate with Webpack 5",
  "homepage": "https://fictiontribe.com",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --config ./config/webpack.config.js",
    "build": "cross-env NODE_ENV=production webpack --config ./config/webpack.config.js",
    "deploy": "surge --project ./dist/ --domain YOUR-SITE-NAME-HERE.surge.sh",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Fiction Tribe",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "babel-loader": "^8.2.5",
    "clean-webpack-plugin": "^4.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^5.5.0",
    "image-minimizer-webpack-plugin": "^3.3.0",
    "imagemin": "^8.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-optipng": "^8.0.0",
    "imagemin-svgo": "^10.0.1",
    "mini-css-extract-plugin": "^2.6.1",
    "node-sass": "^7.0.1",
    "postcss-loader": "^7.0.1",
    "postcss-preset-env": "^7.8.0",
    "sass-loader": "^13.0.2",
    "sharp": "^0.30.7",
    "style-loader": "^3.3.1",
    "surge": "^0.23.1",
    "terser-webpack-plugin": "^5.3.5",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.10.0"
  },
  "dependencies": {
    "gsap": "^3.11.0"
  }
}
