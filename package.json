{
  "name": "ft-webpack-boilerplate",
  "version": "1.0.0",
  "description": "Fiction Tribe's landing page boilerplate with Webpack 5",
  "homepage": "https://fictiontribe.com",
  "main": "index.js",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --config ./config/webpack.config.js",
    "build": "cross-env NODE_ENV=production webpack --config ./config/webpack.config.js",
    "deploy": "surge --project ./dist/ --domain YOUR-SITE-NAME-HERE.surge.sh",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Fiction Tribe",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.24.5",
    "@babel/preset-env": "^7.24.5",
    "babel-loader": "^9.1.3",
    "clean-webpack-plugin": "^4.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^5.6.0",
    "image-minimizer-webpack-plugin": "^4.0.0",
    "imagemin": "^8.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-optipng": "^8.0.0",
    "imagemin-svgo": "^10.0.1",
    "mini-css-extract-plugin": "^2.9.0",
    "node-sass": "^9.0.0",
    "postcss-loader": "^8.1.1",
    "postcss-preset-env": "^9.5.9",
    "sass-loader": "^14.2.1",
    "sharp": "^0.33.3",
    "style-loader": "^4.0.0",
    "surge": "^0.23.1",
    "terser-webpack-plugin": "^5.3.10",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "dependencies": {
    "gsap": "^3.12.5"
  }
}
